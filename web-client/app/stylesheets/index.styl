/* Overridde the margins and whatnot of the address entry input */
#addressEditContainer
  margin-bottom: 0px
#addressEdit
  margin-bottom:-24px
#addressEdit.ng-invalid
  margin-bottom: 0px

/* Override the autocomplete addition of a placeholder */
#addressEdit::-webkit-input-placeholder 
  /* Chrome/Opera/Safari */
  opacity: 0
#addressEdit::-moz-placeholder 
  /* Firefox 19+ */
  opacity: 0
#addressEdit:-ms-input-placeholder 
  /* IE 10+ */
  opacity: 0
#addressEdit:-moz-placeholder  
  /* Firefox 18- */
  opacity: 0

#storeHours
  md-input-container
    margin-top: 3px

.editCard
  padding: 20px 20px 0px 20px 
  #profilePhotoEdit
    /* Height of md-display-3 */
    height: 100px
    width: 100px
    border-radius: 50%
    margin-right: 10%
  #nonMapDiv
    padding-right: 30px

#addFoodDiv
  md-card
    padding: 20px
    transition: all 1s ease
  md-card:hover
    /* TODO fix the color and possibly the onclick border */
