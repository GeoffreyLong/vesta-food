/* variables */
/* Try to mostly use Angular-Material for coloring though */
$primaryColor = #00B36F
$secondaryColor = #FCA345
$alertColor = #EA6E10
$linkColor = #00B7FF
$backgroundColor = #F2F2F2
$starColor = $alertColor


$headerHeight = 50px
$sideNavWidth = 225px

html, body
  padding: 0
  margin: 0
  height: 100%
  width: 100%
  background-color: $backgroundColor


#nonNavContainer
  padding-top: $headerHeight
  width: 80%
  margin: auto


/******************************** TOP NAV BAR ********************************/
/* NOTE a few of these attributes can be encapsulated in a header elements class */
$componentSize = 30px
$marginSpace = 10px
md-toolbar
  height: $headerHeight
  min-height: $headerHeight

  background-color: $primaryColor !important

  /* Make text unselectable */
  -webkit-user-select: none; /* Chrome/Safari */        
  -moz-user-select: none; /* Firefox */
  -ms-user-select: none; /* IE10+ */
  /* Rules below not implemented in browsers yet */
  -o-user-select: none;
  user-select: none;

  #brand-logo
    height: $componentSize
    width: auto
    margin-top: auto
    margin-bottom: auto
    margin-left: 20px

  .topOptions
    display: inline-block
    width: 200px

  button
    cursor: pointer
    height: $navButtonSize
    width: $navButtonSize
    margin: 10px     
    color: #FFFFFF
    border-radius: 0 !important

    md-icon.material-icons
      height: $componentSize
      width: $componentSize
      font-size: $componentSize

  button:hover
    md-icon.material-icons
      color: $secondaryColor

  #navDropdown
    margin: auto
    margin-right:20px
    .md-menu
      button
        /* Doesn't seem to work with md-open */
        cursor: pointer
        
    

/* The menu content shows up outside the nav */
md-menu-content
  .material-icons
    width: auto


/******************************** CART ********************************/
#cart
  .storeTitle
    cursor: pointer
    .md-subheader-inner
      padding: 8px 0px 8px 16px
  .storeTitle:hover
    color: $linkColor
  md-dialog-content
    padding: 20px
  md-list-item
    padding-left: 0px
  .changeQty 
    padding: 2px



/******************************** SIDE NAV BAR ********************************/
md-sidenav
  position: fixed
  /* This ensures that the sidenav doesn't overlap the topnav shadow */
  top: $headerHeight + 15 !important
  background-color: $backgroundColor
  transition: all 0.25s ease-in
  width: $sideNavWidth
  
  .sidenavMenu
    width: 100%
    margin: 0
    text-align: left
    text-transform: none
  .childElement
    width: 80%
    margin-left: 10%


.md-sidenav-backdrop
  height: 0px
  width: 0px


/******************************* SLICK STUFF ********************************/
/* NOTE might want dots div so uniform padding if only one image */

/* arrow styling */
slick
  .slick-prev:before, .slick-next:before
    font-family: 'Material Icons'
    -webkit-font-feature-settings: 'liga'
    color: #000000
    font-size: 40px
  .slick-prev, .slick-next
    z-index: 1
  .slick-prev:before
    content: "chevron_left"
  .slick-next:before
    content: "chevron_right"
  .slick-arrow.slick-prev
    left: 0
  .slick-arrow.slick-next
    right: 20px
  .slick-arrow.slick-prev:before, .slick-arrow.slick-next:before
    opacity: 1
  .slick-arrow.slick-prev:focus:before, .slick-arrow.slick-next:focus:before
    opacity: 1
  .slick-arrow.slick-prev:hover:before, .slick-arrow.slick-next:hover:before
    opacity: 1
    color: $primaryColor 



/******************************** STORES VIEW ********************************/
/* Hacky workaround to make flexbox images scale correctly */
/* Allegedly adding flex="none" on a child may work, I haven't seen success */
#storesContainer *
  min-height: 0
  min-width: 0

#storesContainer
  overflow-x: hidden
  background-color: $backgroundColor
  md-card-title
    padding-top: 0
    .md-headline
      cursor: pointer


    .foodImageInfo
      padding: 5px
      display: block
      background: rgba(0,0,0,0.3)
      position: absolute
      width: inherit

      .foodPrice
        display: inline-block
        color: #FFFFFF
        font-weight: bold
        padding: 4px

      .foodRating
        float: right;
        .star 
          color: $starColor
          md-icon
            color: $secondaryColor


/******************************** STORE FRONT ********************************/
store-front
  slick
    /* Make the center slide larger */
    .slick-slide
      transform: scale(0.6)
      transition: all 0.5s
      md-card-actions
        display:none
    .slick-center
      transform: scale(1)
      md-card-actions
        display: flex
      /* HACK Display the bottom sheet appropriately */
      md-bottom-sheet
        margin: 8px 8px 88px 8px


.importantFixedDiv
  position: fixed
  bottom: 10px
  right: 10px
  z-index: 10
  .importantFixedButton
    background-color: $alertColor
  /* Override default hover behaviour */
  .importantFixedButton:hover
    background-color: $alertColor


#titleDiv
  margin-top: 20px
  width: 80%
  margin-left: auto
  margin-right: auto

  #titleRow
    padding: 10px

  img
    /* Height of md-display-3 */
    height: 56px
    border-radius: 50%

  #storeTitle
    display:inline-block

  #titleStars
    /* If I want the stars to lie low on the line */
    /* Height of md-display-3 */
    padding-top: 20px 
    .star
      color: $starColor
      /* NOTE for whatever reason, this adds an overflow-x to the body */
      font-size: 36px
      height: 36px
      width: 36px

  .underline
    height: 5px;
    background-color: $primaryColor


/* TODO change the current buttons so that they are large chevrons */

.foodImageInfo
  padding: 5px
  background: rgba(0,0,0,0.3)
  margin-bottom: -34px 
  z-index: 1

  .foodPrice
    color: #FFFFFF
    font-weight: bold
  
  .star
    color: $starColor
  
#descriptionPanel
  margin-top: 50px
  margin-bottom: 50px
  #storeDescription
    margin-left: 5%
    width: 100%

/* Styling for the toast */
md-card
  md-toast.md-bottom
    bottom: 50px
    text-align: center

#storeReviews
  .altCard
    background-color: #FFFFFF
    box-shadow: 0 1px 3px 0 rgba(0,0,0,.2),0 1px 1px 0 rgba(0,0,0,.14),0 2px 1px -1px rgba(0,0,0,.12)
    margin: 10px
    padding: 10px
    width: 80%
    margin-left: auto
    margin-right: auto

    .profilePhotoDiv
      vertical-align: top
      width: 10%
      display: inline-block
      .profilePhoto
        border-radius: 50%
        height: 48px;
        width: 48px;
    .reviewStars .star
      color: $starColor

    .reviewContentContainer
      display: inline-block;
      width: 85%
      .reviewComment
        font-weight: 100
        margin-top: 10px


