#storeHours
  md-input-container
    margin-top: 3px

.editCard
  #profilePhotoEdit
    /* Height of md-display-3 */
    height: 100px
    width: 100px
    border-radius: 50%
    margin-right: 10%
    cursor: pointer
  #nonMapDiv
    padding-right: 30px
#storeInfoEditDiv
  .editCard
    padding: 20px
.foodEditDiv
  .editCard
    padding: 20px 20px 0px 20px 

.foodEditDiv
  .foodPriceContainer
    width: 60px;
  .foodPreview
    background-color: $backgroundColor
    padding: 5px 5px 10px 5px


#addFoodDiv
  md-card
    padding: 20px
    transition: all 1s ease
  md-card:hover
    /* TODO fix the color and possibly the onclick border */
    background-color: $alertColor
  color: $primaryColor
  md-icon
    color: $primaryColor
    font-weight: bold
    height: 40px
    font-size: 40px



