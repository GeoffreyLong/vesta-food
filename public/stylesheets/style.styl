    color: #ea6e10
  .icon-block
    margin: 10px

.strike {
  position: relative;
  top: 30px
  text-align: center;
  color: #FFFFFF
}
.strike:after {
  position: absolute;
  left: 0;
  right: 0;
  top: 50%;
  height: 3px;
  content: "";
  background: #FFFFFF;
}
.strike h2 {
  display: inline;
  position: relative;
  z-index: 1;
  margin: 0;
  padding: 0 10px;
  background: #8899AB    
  font-size: 3em;
}
.arrow-down {
  display: inline-block
  padding: 0
  margin: 0
	width: 0; 
	height: 0; 
	border-left: 50px solid transparent;
	border-right: 50px solid transparent;
	
	border-top: 50px solid #3375AA;
}

