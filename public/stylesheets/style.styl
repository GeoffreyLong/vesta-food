.strike {
  position: relative;
  top: 30px
  text-align: center;
  color: #3375AA
}
.strike:after {
  position: absolute;
  left: 0;
  right: 0;
  top: 50%;
  height: 3px;
  content: "";
  background-color: #3375AA
}
.strike h2 {
  display: inline;
  position: relative;
  z-index: 1;
  margin: 0;
  padding: 0 10px;
  background-color: #FFFFFF
  font-size: 3em;
}


