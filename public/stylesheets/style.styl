html,body
  padding: 0
  margin: 0
  height: 100%
  width: 100%
  line-height: 0
body
  font: 14px "Roboto", Helvetica, Arial, sans-serif

a
  color: #00B7FF

#toaster
  /* z-index of a modal is 1003 */
  z-index: 1004
  position: fixed
  top: 85% !important
  width: 100%
  text-align: center
  #toast-container 
    position: relative
    top: 0 !important
    left: 0 !important
    display: inline
    margin: auto
    .toast
      margin: auto
      

.toast
  background-color: #ea6e10
  position: relative
  left: 0px !important

nav
  z-index: 10
  position: fixed
  
  /* Make text unselectable */
  -webkit-user-select: none; /* Chrome/Safari */        
  -moz-user-select: none; /* Firefox */
  -ms-user-select: none; /* IE10+ */
  /* Rules below not implemented in browsers yet */
  -o-user-select: none;
  user-select: none;

  .brand-logo
    font-weight: bold
  li
    a
      font-weight: bold
      -webkit-transition: all 1s
      transition: all 0.5s ease
    a:hover
      background-color: rgba(0,0,0,0.5) !important
      color: #ea6e10


#splashPane
  font-family: 'Avenir LT Std-Book', sans-serif;
  height: 80%
  min-height: 350 px
  max-width: 100%
  /***** IMAGE STUFF ******/
  /*** Set the gradient ***/
  /* default */
  background-image: url("../images/splash_one.jpg") 
  /* For Safari 5.1 to 6.0 */
  background: -webkit-linear-gradient(rgba(0,0,0,0.8), rgba(0,0,0,0.3), rgba(0,0,0,0.8)), url("../images/splash_one.jpg")     
  /* For Opera 11.1 to 12.0 */
  background: -o-linear-gradient(rgba(0,0,0,0.8), rgba(0,0,0,0.3), rgba(0,0,0,0.8)), url("../images/splash_one.jpg") 
  /* For Firefox 3.6 to 15 */
  background: -moz-linear-gradient(rgba(0,0,0,0.8), rgba(0,0,0,0.3), rgba(0,0,0,0.8)), url("../images/splash_one.jpg")  
  /* Standard */
  background: linear-gradient(rgba(0,0,0,0.8), rgba(0,0,0,0.3), rgba(0,0,0,0.8)), url("../images/splash_one.jpg")
  
  /*** Set the size ***/
  background-size: cover

  /*** Set the position (what part of image is shown) ***/
  -ms-background-position-x: center;
  -ms-background-position-y: center;
  background-position: center;
  /* TODO test */
  /* ie8 workaround - http://louisremi.github.io/background-size-polyfill/ */
  -ms-behavior: url(/backgroundsize.min.htc)

  text-align: center


  /***** FORM *****/
  #formContainer
    width:100%
    display: inline-block
    position: absolute
    left:0
    top: 20%;

    h4
      position: relative
      color: #FFFFFF

    form
      margin: 0px
      padding: 0px
      /* This removes the space between the input fields */
      font-size: 0

      input
        border-style: none
        height: 50px
        font-size: 20px
        padding-left: 10px
        padding-right: 10px
      
      input[type="text"]
        width: 250px
        border-radius: 4px 0px 0px 4px
        background-color: #FFFFFF
        
      input[type="submit"]
        cursor: pointer
        color: #FFFFFF
        background-color: #3375AA
        border-radius: 0px 4px 4px 0px

