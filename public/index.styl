/* variables */
$importantColor = #4A6EA9
$alertColor = #EA6E10
$secondaryColor = #EA6E10
$linkColor = #00B7FF

html, body
  padding: 0
  margin: 0
  height: 100%
  width: 100%

md-toolbar
  background-color: $importantColor

  /* Make text unselectable */
  -webkit-user-select: none; /* Chrome/Safari */        
  -moz-user-select: none; /* Firefox */
  -ms-user-select: none; /* IE10+ */
  /* Rules below not implemented in browsers yet */
  -o-user-select: none;
  user-select: none;

  .brand-logo
    margin-top: auto
    margin-bottom: auto
    margin-left: 20px
